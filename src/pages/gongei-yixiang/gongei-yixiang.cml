<script>
import cml from 'chameleon-api'
import store from '../../store'; // 在单独构建的版本中辅助函数为 CML 内置的store.mapState
import request from "../../utils/request";
import {checkEmail, checkPhone, duc2W, goToPathHandle} from "../../utils/utils";
import {yixiangType} from "../../utils/constants";

class GongeiYixiang   {

  data = {
    bannerSrc: "https://wm.source.wiimedia.cn/banner/banner7.jpg",
    show:false,

    targetItem:{} ,// 接受上页面传递的Item

    // 表单的数据模型
    formData:{
      supplyCompany:'', // 企业名称
      fzr :'',
      tel:'', // 联系电话
      remark:'',//'备注',
    },

  }

  computed = {
  }

  watch  = {
  }

  methods = {
    showHandle() {
      this.show = true;
    },

    cancelHandle(){
      this.show = false;
    },

    onInputChange(e){
      const name = e.target.dataset.name
      const value = e.detail.value
      this.formData[`${name}`] = value // this.data.formData 是 obj 对象, 指向这个元素的引用地址
    },

    async confirmHandle(e){ // 收集数据, 提交弹框
      this.cancelHandle()

      const supplyCompany = this.data.formData.supplyCompany // 当做数据修改的时候，只需要在逻辑层修改数据，视图层就会做相应的更新
      if(supplyCompany.length==0){
        cml.showToast({
          message: '请选择企业名称',
          duration: 1000,
        });
        return false;
      }

      const fzr = this.data.formData.fzr // 当做数据修改的时候，只需要在逻辑层修改数据，视图层就会做相应的更新
      if(fzr.length==0){
        cml.showToast({
          message: '请输入联系人',
          duration: 1000,
        });
        return false;
      }

      // 表单校验(修改)
      const phone = this.data.formData.tel||'' // 当做数据修改的时候，只需要在逻辑层修改数据，视图层就会做相应的更新
      if(!(/^1[3456789]\d{9}$/.test(phone))){
        cml.showToast({
          message: '手机号码有误，请重填',
          duration: 1000,
        });
        return false;
      }


      // 供应type:1
      const res = await request('/t/follow/add', {
          followUserId:store.getters.getGlobalUserId.userId,
          ...yixiangType.gongei ,
          ...this.data.formData,
          ...this.data.targetItem,
        },
        'POST'
      )

      const code = res.code
      const message = res.message

      let str = code !== 200 ? message : '提交成功'
      cml.showToast({
        message: str,
        duration: 3000,
      });

      code == 200 && cml.navigateBack(-1)

    },

    handleSubmit() {
      this.showHandle()
    }
  }

  beforeCreate(query) {
    query.requireCompany = decodeURIComponent(query.requireCompany)||''
    this.targetItem = {...query}
  }


  created(query) {
  }

  beforeMount(query) {
  }

  onShow() {
  }

  mounted() {
  }

  onHide() {
  }

  beforeDestroy() {
  }

  destroyed() {
  }
}

export default new GongeiYixiang();
</script>

